<Window 
    Background="#4d4d4d"
        x:Class="ToDoAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoAppWPF"
        mc:Ignorable="d"
        Title="To-Do App" Height="350" Width="525">

    <Grid>
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" 
                 VerticalAlignment="Top" Width="370" Height="30" Background="#e6e6e6"
                 FontSize="14"/>



        <Button Name="AddButton" Content="Lägg till uppgift" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Width="104" Height="30" Margin="386,10,0,0" 
                Click="AddButton_Click" Background="#336699" Foreground="white" FontSize="12" FontWeight="Bold"/>


        <ListBox Name="TasksListBox" HorizontalAlignment="Left" Height="200" Margin="10,50,0,0"
        VerticalAlignment="Top" Width="480" Background="#e6e6e6" FontSize="14"/>

        <Button Name="RemoveButton" Content="Ta bort uppgift" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Width="104" Height="30" Margin="386,269,0,0" 
                Click="RemoveButton_Click" Background="#336699" Foreground="white" FontSize="12" FontWeight="Bold"
                />

    </Grid>
</Window>
